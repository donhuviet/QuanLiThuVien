<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="50dp"
            app:hintEnabled="false">

            <EditText
                android:id="@+id/edSearchTV"
                android:hint="Nhập tên người dùng cần tìm kiếm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:textColorHint="@color/grey_dam"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_edttext"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnSearchTV"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_search_24"
            android:background="@drawable/bg_ui"/>

    </LinearLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:id="@+id/lvThanhVien" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnThemTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:backgroundTint="@color/do_nhat"
        android:src="@drawable/ic_add"
        app:borderWidth="0dp"
        app:layout_anchorGravity="bottom|right|end" />

</LinearLayout>