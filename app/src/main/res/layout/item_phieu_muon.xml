<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2dp"
    android:paddingLeft="5dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="340dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Thành Viên: "
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#8C8C8C"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_thanhVien"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Tên Sách: "
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#8C8C8C"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_sach"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#0A0909"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Giá Thuê: "
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#8C8C8C"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_giaThue"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#0A0909"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ngày Thuê: "
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#8C8C8C"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_ngay"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:textColor="#0A0909"
                android:textSize="18dp" />


        </LinearLayout>
        <TextView
            android:id="@+id/tvTraSach"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textColor="@color/do_nhat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chưa trả sách"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="157dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSua"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/imgXoa"
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_delete"
            />

    </LinearLayout>


</LinearLayout>